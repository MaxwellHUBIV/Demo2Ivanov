<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/loginbg">

    <ImageView
        android:id="@+id/bgimg2"
        android:layout_width="318dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgimg1"
        app:layout_constraintVertical_bias="0.028"
        app:srcCompat="@drawable/loginpaste" />

    <ImageView
        android:id="@+id/passlockerimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bgimg2"
        app:layout_constraintEnd_toStartOf="@+id/line2"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/bgimg2"
        app:layout_constraintTop_toTopOf="@+id/bgimg2"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/passimg" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@+id/bgimg2"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="@+id/bgimg2"
        app:layout_constraintTop_toTopOf="@+id/bgimg2"
        app:srcCompat="@drawable/line" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="225dp"
        android:layout_height="44dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="viewStart"

        android:textColor="@android:color/darker_gray"
        android:textColorHint="#BDBDBD"
        app:layout_constraintBottom_toBottomOf="@+id/bgimg2"
        app:layout_constraintEnd_toEndOf="@+id/bgimg2"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/line2"
        app:layout_constraintTop_toTopOf="@+id/bgimg2"
        app:layout_constraintVertical_bias="0.4" />

    <ImageView
        android:id="@+id/bgimg1"
        android:layout_width="318dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/loginpaste" />

    <ImageView
        android:id="@+id/loginfaceimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bgimg1"
        app:layout_constraintEnd_toStartOf="@+id/line1"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/bgimg1"
        app:layout_constraintTop_toTopOf="@+id/bgimg1"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/logimg" />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/bgimg1"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="@+id/bgimg1"
        app:layout_constraintTop_toTopOf="@+id/bgimg1"
        app:srcCompat="@drawable/line" />

    <EditText
        android:id="@+id/input_Login"
        android:layout_width="225dp"
        android:layout_height="44dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Login"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="#BDBDBD"
        android:textColorLink="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/bgimg1"
        app:layout_constraintEnd_toEndOf="@+id/bgimg1"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/line1"
        app:layout_constraintTop_toTopOf="@+id/bgimg1"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/passrestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Forgot password?"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgimg2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/SignIn_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/signincolor"
        android:text="Sign In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passrestore" />

    <Button
        android:id="@+id/facebook_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/signincolor"
        android:text="Sign In with facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignIn_btn" />

    <Button
        android:id="@+id/CreateAccount"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="221dp"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:text="Create A New Account?"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_btn"
        app:layout_constraintVertical_bias="1.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>